
@{
    ViewBag.Title = "DSNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}







<!-- div.table-responsive -->
<!-- div.dataTables_borderWrap -->

@using HTC_SHOPVIP.Models






<div class="row">
    <div class="col-xs-12">


        <div class="clearfix">
            <div class="pull-left">
                <button type="button" class="btn btn-sm btn-primary" onclick="ThemMoiSp()">Thêm mới nhân viên</button>
                <script>
                    function ThemMoiSp() {
                        location.replace("/Admin/NhanVien/ViewThemNhanVien");
                    }
                </script>
            </div>


            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            Danh sách Nhân Viên
        </div>
        <p style="color:green; padding-left:10px;">@ViewBag.tb1</p>
        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
        <div>
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="center">
                            <label class="pos-rel">
                                <input type="checkbox" class="ace" />
                                <span class="lbl"></span>
                            </label>
                        </th>
                        <th>Mã Nhân Viên</th>
                        <th>Tên Nhân Viên</th>
                        <th>Số điện thoại</th>
                        <th class="hidden-480">Địa chỉ</th>

                        <th>
                            <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                            Tài khoản sử dụng
                        </th>


                        <th>Chỉnh sửa</th>
                    </tr>
                </thead>

                <tbody>
                    @using (var con = new Model1())
                    {
                        var list = (from s in con.NhanViens

                                    select new
                                    {
                                        s.MaNV,
                                        s.Hoten,
                                        s.sdt,
                                        s.diachi,
                                        s.username,
                                    }).ToList();

                        foreach (var item in list)
                        {
                            <tr>
                                <td class="center">
                                    <label class="pos-rel">
                                        <input type="checkbox" class="ace" />
                                        <span class="lbl"></span>
                                    </label>
                                </td>

                                <td>
                                    @item.MaNV
                                </td>
                                <td>@item.Hoten</td>

                                <td class="hidden-480">@item.sdt</td>
                                <td>@item.diachi</td>

                                <td class="hidden-480">
                                    <span class="">@item.username</span>
                                </td>

                                <td>
                                    <div class="hidden-sm hidden-xs action-buttons">
                                        
                                        <a class="green" href="~/Admin/NhanVien/ViewCapNhat?id=@item.MaNV">
                                            <span class="label label-info label-white middle">  Sửa     </span>
                                        </a>


                                        <a class="red" href="~/Admin/NhanVien/XoaNV?id=@item.MaNV">
                                            <span class="label label-danger label-white middle">  Xóa  </span>
                                        </a>
                                    </div>


                                </td>
                            </tr>
                        }
                    }





                </tbody>
            </table>
        </div>
    </div>
</div>






