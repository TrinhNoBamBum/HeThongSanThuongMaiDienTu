@model HTC_SHOPVIP.Models.NhanVien
@using HTC_SHOPVIP.Models
@{
    ViewBag.Title = "ViewCapNhat";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}





<div class="container">
    <div class="row">
        <div class="tile">
            <h3 class="tile-title">Cập nhật thông tin nhân viên</h3>

            <form class="row" action="/Admin/NhanVien/CapNhat1" method="get">
                <div class=" col-md-12">
                    <h5 style="color:green">@ViewBag.tb</h5>
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Tên nhân viên</label>
                    <input name="hoten" class="form-control" type="text" value="@Model.Hoten">
                </div>








                <div class="form-group col-md-3">
                    <label class="control-label">Tên đăng nhập</label>
                    <input name="username" class="form-control" type="text" value="@Model.username">
                </div>


                <div class="form-group col-md-3">
                    <label class="control-label">Mật khẩu</label>
                    <input name="pass" class="form-control" type="password" value="@Model.matkhau">
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Nhập lại mật khẩu</label>
                    <input name="repass" class="form-control" type="password" value="@Model.matkhau">
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Số điện thoại</label>
                    <input name="sdt" class="form-control" type="tel" pattern="[0-9]{10}" required value="@Model.sdt">
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Địa chỉ</label>
                    <input name="diachi" class="form-control" type="text" value="@Model.diachi">
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Email</label>
                    <input name="email" class="form-control" type="text" value="@Model.email">
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Ngày sinh</label>
                    <input name="ngaysinh" class="form-control" type="date" value="@Model.ngaysinh">
                </div>
                <input name="manv" class="" type="hidden" value="@Model.MaNV">

                <div class="col-lg-12">
                    <button class="user-btn-save" type="submit">Lưu lại</button>
                    <a class="user-btn-close pull-right" href="~/Admin/NhanVien/DSNhanVien">Hủy bỏ</a>
                </div>

            </form>



        </div>
    </div>
</div>



