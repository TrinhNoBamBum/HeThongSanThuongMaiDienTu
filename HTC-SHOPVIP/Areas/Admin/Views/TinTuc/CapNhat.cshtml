@model HTC_SHOPVIP.Models.Blog
@using HTC_SHOPVIP.Models
@{
    ViewBag.Title = "CapNhat";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="container">
    <div class="row">

        <h3 class="tile-title">Thêm Bài Viết</h3>
        <form action="/Admin/TinTuc/CapNhat1" method="get">

            <h2>Mã Tin Tức : @Model.MaBLOG</h2>

            <div class="row">


                <div class="form-group col-md-3">
                    <label class="control-label">Mã Tin Tức</label>
                    <input class="form-control" type="text" name="id" value="@Model.MaBLOG">
                </div>


                <div class="form-group col-md-3">
                    <label class="control-label">Tiêu đề</label>
                    <input class="form-control" type="text" name="tieude" value="@Model.TenBlog">
                </div>


                <div class="form-group  col-md-3">
                    <label class="control-label">Thời gian</label>
                    <input class="form-control" type="datetime-local" name="thoigian" value="2017-06-01T08:30">
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Tác giả</label>
                    <input class="form-control" type="text" name="tacgia" value="@Model.tacgia">
                </div>
                <div class="form-group col-md-3">
                    <label for="exampleSelect1" class="control-label">Thể loại</label>
                    <select class="form-control" id="exampleSelect1" name="theloai">
                        @using (var con = new Model1())
                        {
                            var tl = (from s in con.Blog_Theloai
                                      select s).ToList();

                            foreach (var it in tl)
                            {
                                <option value="@it.MaTheLoai">@it.TenTheloai</option>
                            }


                        }

                    </select>
                </div>

                <div class="form-group col-md-3">
                    <label class="control-label">Tags</label>
                    <input class="form-control" type="text" name="tags" value="@Model.Tags">
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Tóm tắt</label>
                    <textarea class="form-control" name="tomtat" rows="5">@Model.Tomtat</textarea>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label">Mở đầu</label>
                    <textarea class="form-control" name="modau" rows="5">@Model.Modau</textarea>
                </div>

                <div class="form-group col-md-12">
                    <label class="control-label">Nội dung</label>
                    <textarea class="form-control" name="noidung" rows="10">@Model.Noidung</textarea>
                </div>

            </div>
            <button class="user-btn-save" type="submit">Lưu lại</button>
            <a class="user-btn-close pull-right" href="~/Admin/TinTuc/DSTinTuc">Hủy bỏ</a>
        </form>

    </div>
</div>


