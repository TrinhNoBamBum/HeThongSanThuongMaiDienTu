@using HTC_SHOPVIP.Models
@{
    ViewBag.Title = "HinhAnh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-xs-12 admin-padding">
            <h3 class="header smaller lighter blue">Ảnh slide</h3>



            <div class="clearfix">
                <div class="pull-left">
                    <button type="button" class="btn btn-sm btn-primary" onclick="ThemMoiSp()">Thêm hình ảnh</button>
                    <script>
                        function ThemMoiSp() {
                            location.replace("/Admin/TinTuc/ThemHA");
                        }
                    </script>
                </div>
                <div class="pull-right tableTools-container"></div>
            </div>

            <!-- div.table-responsive -->
            <!-- div.dataTables_borderWrap -->
            <div>
                <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="center">
                                <label class="pos-rel">
                                    <input type="checkbox" class="ace" />
                                    <span class="lbl"></span>
                                </label>
                            </th>
                            <th>Mã ảnh</th>
                            <th>Hình ảnh </th>
                            
                            <th>Chỉnh sửa</th>
                        </tr>
                    </thead>

                    <tbody>
                        @using (var con = new Model1())
                                    {
                                        var db = (from s in con.Slide_anh
                                                  select s).ToList();
                                        foreach (var item in db)
                                        {
                                <tr>

                                    <td class="center">
                                        <label class="pos-rel">
                                            <input type="checkbox" class="ace" />
                                            <span class="lbl"></span>
                                        </label>
                                    </td>

                                    <td>
                                        @item.MaSlide
                                    </td>
                                    <td> <img src="~/Content/img/banner-T/@item.Linkanh" class="img-fluid" width="600"><img /> </td>
                                   

                                    <td>
                                        <div class="hidden-sm hidden-xs action-buttons">
                                            <a class="blue" href="#">
                                                <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                            </a>

                                            <a class="green" href="#">
                                                <i class="ace-icon fa fa-pencil bigger-130"></i>
                                            </a>

                                            <a class="red" href="#">
                                                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                            </a>
                                        </div>

                                        <div class="hidden-md hidden-lg">
                                            <div class="inline pos-rel">
                                                <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                    <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                </button>

                                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                    <li>
                                                        <a href="#" class="tooltip-info" data-rel="tooltip" title="View">
                                                            <span class="blue">
                                                                <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a href="#" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                            <span class="green">
                                                                <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a href="#" class="tooltip-error" data-rel="tooltip" title="Delete">
                                                            <span class="red">
                                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>


                            }

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
